<main class="container">
    <div class="d-flex justify-content-center">
        <a href="https://www.behance.net/gallery/20349369/BURGERIZE" target="_blank"><img src="burgerize2.png" alt="Art by Lucca" style="max-height: 300px;"></a>
    </div>

    <h1>Let's Eat!</h1>
    <div class="row d-flex">
        <div class="col">
            <h2>Eat the Burger!</h2>

            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    <button class="eatBtn btn btn-danger" id="{{id}}">Devour It!</button>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Burgers Swallowed!</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <h2>What kind of burger do you want to eat?</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" class="form-control" id="burg" name="name" placeholder="Burger Name">
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>
    </div>
</main>